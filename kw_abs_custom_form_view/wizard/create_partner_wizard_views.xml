<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_partner_wizard_view_form" model="ir.ui.view">
        <field name="name">create.partner.wizard.view.form</field>
        <field name="model">create.partner.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="names" />
                        <field name="country_id" />
                        <field name="company_type" /> 
                    </group>
                </sheet>
                <footer>
                    <button name="action_create"
                        string="Create"
                        type="object"
                        icon="fa-plus"
                        class="btn-primary"/>
                    <button 
                        special="cancel" 
                        class="oe_link" 
                        string="Close"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="create_partner_multi_wizard_action_server" model="ir.actions.server">
        <field name="name">Add Partners</field>
        <field name="model_id" ref="model_create_partner_multi_wizard"/>
        <!-- <field name="binding_model_id" ref="model_create_partner_multi_wizard"/> -->
        <field name="state">code</field>
        <field name="code">
            action = model.action_open_wizard()
        </field>
    </record>

    <record id="menu_create_partner_multi_wizard" model="ir.ui.menu">
        <field name="name">Add Partners</field>
        <field name="parent_id" ref="contacts.res_partner_menu_config"/>
        <field name="action">
            ref="server_action_create_partner_multi_wizard"
        </field>
    </record>

    <record id="action_create_partner_multi"
        model="ir.actions.act_window">
    <field name="name">Add Partners</field>
    <field name="res_model">create.partner.multi.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="binding_model_id" ref="base.model_res_partner"/>
    <field name="binding_view_types">form</field>
    <field name="binding_type">action</field>
</record>


</odoo>
