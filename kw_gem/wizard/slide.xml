<odoo>
    <record id="kw_gem_kw_gem_slide_wizard_views_form"
            model="ir.ui.view">
        <field name="name">kw.gem.slide.wizard.form</field>
        <field name="model">kw.gem.slide.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="cassette_id" invisible="1"/>
                        <field name="cassette_examination_type_ids" invisible="1"/>
                        <field name="examination_id"
                               options="{'no_open': True, 'no_create': True}"
                               domain="[('id','in',cassette_examination_type_ids)]"/>
                    </group>
                </sheet>
                <footer>
                    <button name="add_slide"
                            type="object" class="oe_highlight"
                            string="Save"/>
                    <button special="cancel"
                            string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
