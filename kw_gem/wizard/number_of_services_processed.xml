<odoo>

    <record id="kw_gem_services_processed_wizard_views_form"
            model="ir.ui.view">
        <field name="name">kw.gem.services.processed.wizard.form</field>
        <field name="model">kw.gem.services.processed.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </sheet>
                <footer>
                    <button name="add_parameters"
                            type="object" class="oe_highlight"
                            string="Report in html"/>
                    <button name="add_parameters_xlsx"
                            type="object" class="oe_highlight"
                            string="Report in xlsx"/>
                    <button special="cancel"
                            string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="kw_gem_kw_gem_number_of_services_act_window" model="ir.actions.act_window">
        <field name="name">Dates for report: Number of Services Processed</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kw.gem.services.processed.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="kw_gem_services_processed_wizard_views_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="kw_gem_kw_gem_number_of_services_menu"
              action="kw_gem_kw_gem_number_of_services_act_window"
              parent="sale.menu_sale_report"
              groups="kw_gem.group_kw_gem_registrar,kw_gem.group_kw_gem_1_office_administrator,kw_gem.group_kw_gem_2_office_administrator,base.group_system"
              name="Number of Services Processed" sequence="400"/>

</odoo>
