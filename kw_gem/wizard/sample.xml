<odoo>
    <record id="kw_gem_kw_gem_sample_wizard_views_form"
            model="ir.ui.view">
        <field name="name">kw.gem.sample.wizard.form</field>
        <field name="model">kw.gem.sample.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sale_order_id" invisible="1"/>
                        <field name="sample_name_ids" widget="many2many_tags"/>
                        <field name="all_sample_type_ids" invisible="1"/>
                        <field name="sample_type_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True, 'no_quick_create': True}"/>
                        <field name="all_examination_type_ids" invisible="1"/>
                        <field name="examination_type_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True, 'no_quick_create': True}"/>
                        <field name="doctor_ids" invisible="1"/>
                        <field name="doctor_id" domain="[('id','in',doctor_ids)]" options="{'no_open': True, 'no_create': True, 'no_quick_create': True}"/>
                        <field name="macroscopy" widget="html"/>
                        <field name="cassettes_number"/>
                    </group>
                </sheet>
                <footer>
                    <button name="add_sample"
                            type="object" class="oe_highlight"
                            string="Save"/>
                    <button special="cancel"
                            string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
