<odoo>

    <record id="kw_gem_kw_sale_order_payment_method_view_tree" model="ir.ui.view">
        <field name="name">kw.sale.order.payment.method.tree</field>
        <field name="model">kw.sale.order.payment.method</field>
        <field name="arch" type="xml">
            <tree editable="bottom" sample="1">
                <field name="name"/>
                <field name="type"/>
                <field name="is_company" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="kw_gem_kw_sale_order_payment_method_action" model="ir.actions.act_window">
        <field name="name">Payment Method</field>
        <field name="res_model">kw.sale.order.payment.method</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create Payment Method
            </p>
        </field>
    </record>

    <menuitem
            id="kw_sale_order_payment_method_menu"
            name="Payment Method"
            parent="sale.menu_sales_config"
            groups="base.group_no_one"
            action="kw_gem_kw_sale_order_payment_method_action"
            sequence="999"/>

</odoo>
