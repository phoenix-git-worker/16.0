<odoo>
    <record id="kw_agreement_form" model="ir.ui.view">
        <field name="name">agreement.form</field>
        <field name="model">agreement</field>
        <field name="inherit_id"
               ref="agreement.agreement_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='code']" position="attributes">
                    <attribute name="invisible">True</attribute>
<!--                    <attribute name="required">0</attribute>-->
            </xpath>
            <xpath expr="//field[@name='agreement_type_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='domain']" position="attributes">
                    <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='signature_date']" position="attributes">
                    <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='end_date']" position="attributes">
                    <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='domain']" position="after">
                <field name="kw_pricelist_id"/>
                <field name="kw_partner_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="kw_agreement_tree" model="ir.ui.view">
        <field name="name">agreement.tree</field>
        <field name="model">agreement</field>
        <field name="inherit_id"
               ref="agreement.agreement_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='code']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='signature_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="kw_partner_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="kw_agreement_search" model="ir.ui.view">
        <field name="name">agreement.search</field>
        <field name="model">agreement</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id"
               ref="agreement.agreement_search"/>
        <field name="arch" type="xml">
        <xpath expr="//filter[@name='partner_groupby']"
               position="attributes">
            <attribute name="context">{'group_by': 'kw_partner_ids'}
            </attribute>
        </xpath>
            <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="kw_partner_ids"  string='Partners' filter_domain="[('kw_partner_ids','ilike', self)]"/>
            </xpath>
        </field>
    </record>

</odoo>
