<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kw_gem_generic_process_sale_order_form" model="ir.ui.view">
        <field name="name">sale.order.form (kw_gem_generic_process)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath expr="//header" position="replace">
                <header>
                    <div class="generic-process-action-widget">
                        <field name="generic_process_action_json"
                               attrs="{'invisible': [('kw_stage', '=', 'canceled')]}"
                               widget="generic_process_action_widget"/>
                    </div>
                    <button name="action_canceled" type="object" string="Cancel"
                            confirm="Are you sure?"
                            attrs="{'invisible': [('kw_stage', '=', 'canceled')]}"/>
                    <field name="stage_id" widget="statusbar"
                           required="0"
                           attrs="{'readonly': True}"
                           domain="[('id', '=', stage_id)]" invisible="1"/>
                    <field name="state" widget="statusbar" invisible="1"/>
                    <field name="kw_stage" widget="statusbar" invisible="0"/>
                </header>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="generic_process_flow_id" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
