<odoo>
    <record id="paperformat_object_label_40_58" model="report.paperformat">
        <field name="name">58x40 Sticker Format</field>
        <field name="default"/>
        <field name="format">custom</field>
        <field name="page_height">40</field>
        <field name="page_width">58</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">1</field>
        <field name="margin_bottom">1</field>
        <field name="margin_left">1</field>
        <field name="margin_right">1</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <template id="kw_gem_report_simple_label">
        <t t-name="kw_gem.report_simple_label">
            <div style="width: 175%; display: block; height:11rem; padding: 45px 0 0 0; margin-left: -65px; margin-right: auto; margin-top: -10px">
                <img t-if="object.name and len(object.name) == 13"
                     t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', object.name, 600, 150)"
                     style="width:95%;height:100%;"/>
                <img t-elif="object.name and len(object.name) == 8"
                     t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', object.name, 600, 150)"
                     style="width:100%;height:100%;"/>
                <img t-else=""
                     t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', object.name, 600, 150)"
                     style="width:100%;height:100%;"/>
            </div>
        </t>
    </template>

    <template id="report_label">
        <t t-name="kw_gem.report_label">
            <t t-call="web.basic_layout">
                <div class="container" style="height: 40mm; width:58mm; display: block;">
                    <t t-foreach="docs" t-as="object">
                        <t t-call="kw_gem.kw_gem_report_simple_label">
                            <t t-set="object" t-value="object"/>
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <record id="kw_gem_report_sale_order_label"
            model="ir.actions.report">
        <field name="name">Case Name</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">kw_gem.report_label</field>
        <field name="report_file">kw_gem.report_label</field>
        <field name="print_report_name">'Products Labels - %s' %(object.name)
        </field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="paperformat_id" ref="kw_gem.paperformat_object_label_40_58"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
