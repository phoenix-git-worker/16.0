<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kw_create_account_bank_statement_line_wizard_view_tree" model="ir.ui.view">
        <field name="name">kw.create.account.bank.statement.line.view.tree</field>
        <field name="model">kw.create.account.bank.statement.line</field>
        <field name="arch" type="xml">
            <tree string="Statement_lines">
                <field name="kw_document_date"/>
                <field name="kw_partner_id"/>
                <field name="kw_debet"/>
                <field name="kw_credit"/>
                <field name="kw_currency_coverage"/>
                <field name="kw_payment_purpose"/>
                <field name="kw_ref"/>
            </tree>
        </field>
    </record>

    <record id="kw_create_account_bank_statement_line_wizard_form" model="ir.ui.view">
        <field name="name">kw.create.bank.statement.line.view.form</field>
        <field name="model">kw.create.account.bank.statement.line</field>
        <field name="arch" type="xml">
            <form string="Create Bank Statement">
                <group>
                    <group >
                        <field name="kw_document_date"/>
                        <field name="kw_statement_date"/>
                        <field name="kw_partner_id"/>
                        <field name="kw_partner_tax_id"/>
                    </group>
                    <group >
                        <field name="kw_raw_bank_id"/>
                        <field name="kw_partner_acc_number"/>
                        <field name="kw_raw_bic"/>
                        <field name="kw_payment_purpose"/>
                    </group>
                </group>
                <group >
                    <field name="kw_debet"/>
                    <field name="kw_credit"/>
                    <field name="kw_currency_coverage"/>
                    <field name="kw_ref"/>
                </group>
            </form>
        </field>
    </record>

</odoo>
