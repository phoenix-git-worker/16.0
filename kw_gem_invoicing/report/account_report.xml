<odoo noupdate="0">

    <record id="kw_gem_invoicing_report_paperformat"
            model="report.paperformat">
        <field name="name">European A4</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
    </record>

    <record id="action_kw_gem_invoicing_report" model="ir.actions.report">
        <field name="name">Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">kw_gem_invoicing.kw_gem_invoicing_container</field>
        <field name="report_file">kw_gem_invoicing.invoice_template</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="paperformat_id" ref="kw_gem_invoicing.kw_gem_invoicing_report_paperformat"/>
        <field name="binding_type">report</field>
        <field name="groups_id" eval="[(6, 0, [ref('kw_gem.group_kw_gem_financier'), ref('base.group_system')])]"/>
    </record>

    <record id="account.account_invoices" model="ir.actions.report">
        <field name="groups_id"
               eval="[(6, 0, [ref('base.group_system')])]"/>
    </record>

    <record id="account.action_account_original_vendor_bill" model="ir.actions.report">
        <field name="groups_id"
               eval="[(6, 0, [ref('base.group_system')])]"/>
    </record>

    <record id="account.account_invoices_without_payment" model="ir.actions.report">
        <field name="groups_id"
               eval="[(6, 0, [ref('base.group_system')])]"/>
    </record>

</odoo>

